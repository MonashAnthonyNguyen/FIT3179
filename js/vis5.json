{
 "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 500,
  "title": "Pyramid Locations",
  
  "data": {
    "url": "https://raw.githubusercontent.com/MonashAnthonyNguyen/FIT3179/main/data/pyramids.csv"
  },

  "transform": [
    {"filter": {"field": "Height_(m)","valid": true}}
  ],
  "mark": {"type": "bar", "color": "#fff7bc", "tooltip": true},
  "encoding": {
    "x": {
      "field": "Site", 
      "type": "nominal",
      "title": "Site",
      "sort": "-y"
    },
    "y": {
      "aggregate": "count",
      "field": "Site", 
      "title": "Number of Pyramids",
      "stack": "zero"
    },
    "color": {
      "field": "Type",
      "type": "nominal",
      "scale": {
        "domain": ["True", "Step", "Smooth-faced", "Smooth-sided", "Mastaba", "Bent"],
        "range": ["#e7ba52", "#c7c7c7", "#aec7e8", "#1f77b4", "#9467bd", "#9467bd"]
      },
      "legend": {"title": "Pyramid Type"}
    }
  }
}
