{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 500,
  "title": "Pyramids of Egypt",
  "projection": {"type": "equirectangular"},
  "layer": [
    {
      "data": {
        "url": "https://monashanthonynguyen.github.io/FIT3179/js/Egypt.geo.json",
        "format": {"type": "topojson", "feature": "custom"}
      },
      "mark": {"type": "geoshape", "fill": "#fff7bc", "stroke": "white"}
    },

    {
      "data": {
        "url": "https://monashanthonynguyen.github.io/FIT3179/js/ne_110m_rivers_lake_centerlines.json",
        "format": {"type": "topojson", "feature": "ne_110m_rivers_lake_centerlines"}
      },
      "mark": {"type": "geoshape", "color": "blue"}
    },
    
    {
      "data": {
        "url": "https://raw.githubusercontent.com/MonashAnthonyNguyen/FIT3179/main/data/pyramids.csv"
      },


      "mark": {"type": "circle", "tooltip": {"content": "data"}, "color": "#f03b20"},
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "tooltip": [
          {"field": "Modern name", "type": "nominal"},
          {"field": "Dynasty", "type": "nominal"},
          {"field": "Site", "type": "nominal"},
          {"field": "Height (m)", "type": "quantitative"}
        ]
      }
    }

  ]
}
